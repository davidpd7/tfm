{
    "app": {
        "title": "Fraud Detector",
        "geometry": [280, 120],
        "icon_path": ["fraud", "assets", "images", "app_icon.ico"],
        "packages": {
            "model_path": ["fraud", "assets", "packages", "LogisticRegression.pkl"],
            "binning_amt": ["fraud", "assets", "packages", "optb_amt.joblib"],
            "binning_meandiff": ["fraud", "assets", "packages", "optb_meandiff.joblib"],
            "binning_tslt":["fraud", "assets", "packages", "optb_tslt.joblib"],
            "preprocessor": ["fraud", "assets", "packages", "preprocessor.joblib"]
        },
        "mandatory_indicator": "*"
    },
    "template": {
        "name": "template_fraud.csv",
        "columns": {
            "datetime": {
                "transaction": "trans_date_trans_time",
                "date_of_birth": "dob"
            },
            "mandatory": [
                "trans_date_trans_time",
                "amt",
                "lat",
                "long",
                "city_pop",
                "unix_time",
                "merch_lat",
                "merch_long",
                "dob",
                "gender",
                "category"
            ],
            "non_mandatory": ["first", "last", "street", "city", "state", "job"]
        }
    },
    "transformed_data": {
        "columns": {
            "datetime": {
                "transaction_day": "transaction_day",
                "transaction_hour": "transaction_hour",
                "transaction_age": "age",
                "unix_time":"unix_time",
                "time_since_last_transaction":"time_since_last_transaction",
                "number_days_year": 365
            },
            "transformations" :{
                "credit_card_number" :"cc_num",
                "mean_transaction_amount":"mean_transaction_amount",
                "transaction_amount_diff" :"transaction_amount_diff"
            },
            "binned": {
                "amount": "amt",
                "amount_binned": "amt_binned",
                "transaction_amount_diff":"transaction_amount_diff_binned",
                "time_since_last_transaction":"time_since_last_transaction_binned"
            },
            "numerical" : ["lat", "long", "merch_lat", "merch_long", "age", "transaction_hour","transaction_day"],
            "categorical" : ["gender", "category", "amt_binned", "time_since_last_transaction_binned", "transaction_amount_diff_binned"]
        }
    },
    "view": {
        "button_style": {
            "background-color": "#ffffff",
            "font-size": "11px",
            "border": "3px solid #ddd",
            "font-family": "Segoe UI",
            "font-weight": "italic",
            "color": "#100",
            "padding": "5px 5px",
            "border-radius": "15px"
        },
        "button_size": [80, 40],
        "push_buttons": {
            "push_buttons1": {
                "name": "Predict",
                "pos": [1, 1]
            },
            "push_buttons2": {
                "name": "Process Data",
                "pos": [1, 0]
            }
        },
        "menu_bar": {
            "file_menu": {
                "name": "File",
                "option1": "Import .csv",
                "option2": "Export template",
                "option3": "Exit"
            },
            "info_menu": {
                "name": "Info",
                "option1": "Instructions",
                "option2": "Version"
            }
        }
    }
}
